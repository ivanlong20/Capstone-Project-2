<%-include("header.ejs")%>

  <body>
    <a href="/">Home</a>
    <form action="/edit-post/<%=post.id%>" method="POST">
      <input
        type="text"
        name="title"
        placeholder="Title"
        value="<%=post.title  %>"
      />
      <input
        type="text"
        name="author"
        placeholder="Author"
        value="<%=post.author%>"
      />
      <input
        type="text"
        name="password"
        placeholder="Access Code"
        value="<%=post.password%>"
      />
      <textarea name="content" placeholder="Content">
<%=post.content%></textarea
      >
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
