<%-include("header.ejs")%>

<div class="container mt-2">
  <h1 class="text-white mb-3">Edit Post</h1>
  <form action="/edit-post/<%=post.id%>" method="POST">
    <label for="title" class="text-white pb-2">Title</label><br />
    <input
      type="text"
      name="title"
      placeholder="Title"
      style="width: 80em; padding: 0.5rem"
      class="bg-darker rounded-3 text-light"
      value="<%=post.title %>"
    /><br />
    <label for="author" class="text-white py-2">Author</label><br />
    <input
      type="text"
      name="author"
      placeholder="Author"
      style="width: 30em; padding: 0.5rem"
      class="bg-darker rounded-3 text-light"
      value="<%=post.author %>"
    /><br />
    <label for="password" class="text-white py-2">Access Code</label><br />
    <input
      type="text"
      name="password"
      placeholder="Access Code"
      style="width: 10em; padding: 0.5rem"
      class="bg-darker rounded-3 text-light"
      value="<%=post.password %>"
    /><br />
    <label for="content" class="text-white py-2">Content</label><br />
    <textarea
      name="content"
      style="width: 80em; height: 25em"
      class="bg-darker rounded-3 text-light p-3"
    >
<%=post.content %></textarea
    ><br />
    <button type="submit" class="mt-3 btn btn-light">Submit</button>
  </form>
</div>
<%-include("footer.ejs")%>
